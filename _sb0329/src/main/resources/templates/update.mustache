{{>layout/header}}

<h1>게시글 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form action="/updateProduct" method="post">
            <div class="form-group">
                <label for="title">번호</label>
                <input type="text" class="form-control" id="prodId" value="{{product.prodId}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">제품명</label>
                <input type="text" class="form-control" id="prodName" value="{{product.prodName}}">
            </div>
            <div class="form-group">
                <label for="author"> 가격 </label>
                <input type="text" class="form-control" id="prodPrice" value="{{product.prodPrice}}" readonly>
            </div>
            
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="submit" class="btn btn-primary"  id="btn-update">수정 완료</button>
        <form action="/deleteProduct" method="post">
   			 <input type="hidden" name="prodId" value="{{product.prodId}}">
  		  <button type="submit" class="btn btn-danger">삭제</button>
</form>
    </div>
</div>

{{>layout/footer}}